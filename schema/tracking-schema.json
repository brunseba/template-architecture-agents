{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/yourusername/template-architecture-agents/schema/tracking-schema.json",
  "title": "Documentation Tracking Schema",
  "description": "Schema for validating .docs-tracking.json structure",
  "type": "object",
  "required": ["version", "last_generation", "history"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the tracking data format"
    },
    "last_generation": {
      "type": "object",
      "required": ["commit_id", "timestamp", "generator", "mappings"],
      "properties": {
        "commit_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{7,40}$",
          "description": "Git commit hash (short or full)"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "generator": {
          "type": "string",
          "description": "Tool or system that generated the documentation"
        },
        "mappings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["inputs", "outputs", "description"],
            "properties": {
              "inputs": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                },
                "description": "List of input file paths relative to project root"
              },
              "outputs": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                },
                "description": "List of output file paths relative to project root"
              },
              "description": {
                "type": "string",
                "description": "Human-readable description of the transformation"
              },
              "input_hashes": {
                "type": "object",
                "additionalProperties": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{64}$"
                },
                "description": "SHA-256 hashes of input files (filename -> hash)"
              },
              "output_hashes": {
                "type": "object",
                "additionalProperties": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{64}$"
                },
                "description": "SHA-256 hashes of output files (filename -> hash)"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["commit_id", "timestamp", "version"],
        "properties": {
          "commit_id": {
            "type": "string",
            "pattern": "^[0-9a-f]{7,40}$"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
